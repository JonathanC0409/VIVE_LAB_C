@model Vivelab.Presentacion_MVC_.Models.CancionUploadViewModel

@{
    ViewData["Title"] = "Subir Canción";
}

<h2>Subir Canción</h2>

<form asp-action="Subir" method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label asp-for="Titulo" class="form-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Archivo" class="form-label"></label>
        <input asp-for="Archivo" type="file" class="form-control" />
        <span asp-validation-for="Archivo" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Duracion" class="form-label"></label>
        <input asp-for="Duracion" class="form-control" placeholder="hh:mm:ss" />
        <span asp-validation-for="Duracion" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ArtistaCodigo" class="form-label"></label>
        <input asp-for="ArtistaCodigo" class="form-control" />
        <span asp-validation-for="ArtistaCodigo" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="AlbumCodigo" class="form-label"></label>
        <input asp-for="AlbumCodigo" class="form-control" />
        <span asp-validation-for="AlbumCodigo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Subir Canción</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

