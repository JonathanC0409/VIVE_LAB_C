@model Vivelab.Modelos.Usuario

@{
    ViewData["Title"] = "Recargar Saldo";
}

<h2>Recargar saldo para @Model.Nombre</h2>

<form asp-action="RecargarSaldo" method="post">
    <input type="hidden" name="id" value="@Model.Codigo" />

    <div class="form-group">
        <label>Monto a recargar:</label>
        <input type="number" name="monto" step="0.01" min="0" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Recargar</button>
</form>
